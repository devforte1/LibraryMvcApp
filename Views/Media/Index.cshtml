@model LibraryMvcApp.Models.MediaModel
@{
    ViewBag.Title = "Media Inventory";
}

<h2>Inventory Page</h2>

<div class="container-sm">
    <table id="MediaList" border="1" cellpadding="10">
    <tr>
        <thead>Media ID&nbsp;</thead>
        <thead>Media Type&nbsp;</thead>
        <thead>&nbsp;Media Name</thead>
        <thead>Quantity&nbsp;</thead>
    </tr>
    @foreach(MediaModel item in ViewBag.MediaInventory)
    {
        <tr><td width="60">@item.MediaId</td><td>@item.Type</td><td>@item.Name</td><td>@item.Quantity</td></tr>
    }
    </table>
</div>